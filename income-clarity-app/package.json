{
  "name": "income-clarity-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3000",
    "dev:tty": "node dev-server-tty.js",
    "dev:exec": "./dev-server-exec.sh",
    "dev:force-tty": "NODE_OPTIONS='--max-old-space-size=4096' FORCE_COLOR=1 npx next dev --hostname 0.0.0.0 --port 3000",
    "dev:production": "NODE_ENV=production npx next dev --hostname 0.0.0.0 --port 3000",
    "dev:ssh": "node server-wrapper.js",
    "build": "next build",
    "start": "next start --port 3000",
    "start:ssh": "node server-wrapper.js --production",
    "start:production": "npm run build && npm run start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "type-check": "tsc --noEmit",
    "port:status": "lsof -i :3000 || echo 'Port 3000 is free'",
    "port:kill": "lsof -ti :3000 | xargs kill -9 2>/dev/null || echo 'Port 3000 already free'",
    "dev:safe": "npm run port:kill && npm run dev",
    "validate-env": "node scripts/validate-env.js",
    "cleanup": "bash scripts/auto-cleanup.sh",
    "quality-check": "bash scripts/quality-check.sh",
    "dev-setup": "bash scripts/dev-setup.sh",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "stable": "npm run build 2>/dev/null || true && node custom-server.js",
    "play": "node custom-server.js"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "jest-environment-jsdom": "^30.0.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.536.0",
    "next": "^15.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "recharts": "^3.1.0",
    "resend": "^6.0.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.5",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8",
    "prisma": "^6.14.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
