{
  "all": true,
  "check-coverage": true,
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.config.js",
    "**/*.config.ts",
    "**/node_modules/**",
    "**/.next/**",
    "**/coverage/**",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/e2e/**",
    "**/playwright-report/**",
    "**/test-results/**",
    "jest.setup.js",
    "next.config.mjs",
    "tailwind.config.ts",
    "postcss.config.mjs",
    "eslint.config.mjs",
    "middleware.ts"
  ],
  "include": [
    "app/**/*.{js,jsx,ts,tsx}",
    "components/**/*.{js,jsx,ts,tsx}",
    "hooks/**/*.{js,jsx,ts,tsx}",
    "lib/**/*.{js,jsx,ts,tsx}",
    "contexts/**/*.{js,jsx,ts,tsx}",
    "types/**/*.{js,jsx,ts,tsx}"
  ],
  "branches": 80,
  "functions": 80,
  "lines": 80,
  "statements": 80
}